@model RobertTest.Models.Dto.CustomerPaymentVM

@{
    ViewData["Title"] = "Create";
}

<hr />
<form asp-action="payment" asp-controller="customers">
    <div class="row col-12">
        <div class="col-4 col-md-4 shadow offset-2">

            <label asp-for="id" class="control-label visually-hidden"></label>
            <input asp-for="id" class="form-control visually-hidden " />
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control disabled" readonly />
            </div>
            <div class="form-group">
                <label asp-for="address" class="control-label"></label>
                <input asp-for="address" class="form-control" readonly />
            </div>
            <div class="form-group rounded-3">
                <label asp-for="city" class="control-label"></label>
                <input asp-for="city" class="form-control" readonly />
                <span asp-validation-for="city" class="text-danger "></span>
            </div>
        </div>
        
        <div class="col-4 col-md-3">
            <div class="card-body shadow">
                <div class="form-group rounded-3" style="padding-left:30px">
                    <img id="list" src="@Model.image" class="rounded-circle" alt="" style="width:200px;height:200px" alt="" />
                </div>
            </div>
        </div>
        <div class="col-2 col-md-2 text-center py-3">
            <div class="card-body shadow " style="background-color:yellow">
                <p>Amount Deposited successfully:</p>
                <br />
                <div class="d-flex mx-auto">
                    <span class="mx-auto d-flex pt-3">
                        <h2 class="align-text-bottom my-3">$</h2><input type="currency" id="cc" asp-for="@Model.payment.Amount" style="width:70px;height:70px; background-color:yellow" class="mx-auto h1 text-center border-0" value="1" readonly></input>
                    </span>
                </div>
            </div>
        </div>

    </div>
</form>
<br/><br/>
<div class="col-12 col-md-4 offset-md-4">
    <a href="Customers/Customers" class="btn btn-success  form-control">
        <i class="bi bi-arrow-left-square"></i> &nbsp;&nbsp;Back to List
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script type="text/javascript">

    $("#b1").click(function (e) {
        if ($("#cc").val() > 0)
            $("#cc").val($("#cc").val() - 1);
    });
    document.getElementById('b2').addEventListener('click', function (e) {
        document.getElementById('cc').value = Number(document.getElementById('cc').value) + 1;

    });


    const imgInput = document.querySelector('#imginput')
    const imgEl = document.querySelector('#list')

    function handleFileSelect() {
        if (imgInput.files && imgInput.files[0]) {
            imgEl.src = URL.createObjectURL(imgInput.files[0]);
            imgEl.onload = () => {
                URL.revokeObjectURL(imgEl.src)
                imgEl.src = URL.createObjectURL(imgInput.files[0]);
            }
        }
    }
